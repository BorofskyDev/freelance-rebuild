{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": { "jsx": true }
  },
  "plugins": ["react"],
  "rules": {
    // ⚓️ Only flag unescaped quotes, apostrophes, <, >, etc. in JSX text
    "react/no-unescaped-entities": "error"
  },
  "settings": {
    "react": { "version": "detect" }
  }
}
